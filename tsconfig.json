{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./build",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "example"
    ]
}